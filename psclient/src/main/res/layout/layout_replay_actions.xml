<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/replay_actions"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:elevation="4dp"
    android:visibility="gone"
    android:background="@drawable/bg_battle_extra_actions">

    <ImageButton
        android:id="@+id/replay_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="2dp"
        android:background="?selectableItemBackgroundBorderless"
        android:src="@drawable/ic_replay_back"
        android:tint="?attr/colorOnSurface"/>

    <ImageButton
        android:id="@+id/replay_play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="2dp"
        android:background="?selectableItemBackgroundBorderless"
        android:src="@drawable/ic_replay_pause"
        android:tint="?attr/colorOnSurface"/>

    <ImageButton
        android:id="@+id/replay_forward_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="2dp"
        android:background="?selectableItemBackgroundBorderless"
        android:src="@drawable/ic_replay_forward"
        android:tint="?attr/colorOnSurface"/>

</LinearLayout>